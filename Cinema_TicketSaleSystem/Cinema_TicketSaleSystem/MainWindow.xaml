<Window x:Class="Cinema_TicketSaleSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CinemaTradeSystem" Height="768" Width="1024" Loaded="Window_Loaded_1" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF324349" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid x:Name="HallGrid" HorizontalAlignment="Left" Height="720" Margin="208,10,0,0" VerticalAlignment="Top" Width="800">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFB1C9E2" Offset="1"/>
                    <GradientStop Color="#FF33373C"/>
                    <GradientStop Color="#FF4E5660"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
